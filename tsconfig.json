{
    "compilerOptions": {
        "emitDeclarationOnly": true,
        "declaration": true,
        "module": "CommonJS",
        "target": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "outDir": "lib",
        "skipLibCheck": true,
        "removeComments": true,
    },
    "exclude": [
        "test"
    ]
}